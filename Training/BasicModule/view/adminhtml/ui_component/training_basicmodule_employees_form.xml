<?xml version="1.0" ?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
	<argument name="data" xsi:type="array">
		<item name="js_config" xsi:type="array">
			<item name="provider" xsi:type="string">training_basicmodule_employees_form.employees_form_data_source</item>
		</item>
		<item name="label" xsi:type="string" translate="true">General Information</item>
		<item name="template" xsi:type="string">templates/form/collapsible</item>
	</argument>
	<settings>
		<buttons>
			<button name="back" class="Training\BasicModule\Block\Adminhtml\Employees\Edit\BackButton"/>
			<button name="delete" class="Training\BasicModule\Block\Adminhtml\Employees\Edit\DeleteButton"/>
			<button name="save" class="Training\BasicModule\Block\Adminhtml\Employees\Edit\SaveButton"/>
			<button name="save_and_continue" class="Training\BasicModule\Block\Adminhtml\Employees\Edit\SaveAndContinueButton"/>
		</buttons>
		<namespace>training_basicmodule_employees_form</namespace>
		<dataScope>data</dataScope>
		<deps>
			<dep>training_basicmodule_employees_form.employees_form_data_source</dep>
		</deps>
	</settings>
	<dataSource name="employees_form_data_source">
		<argument name="data" xsi:type="array">
			<item name="js_config" xsi:type="array">
				<item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
			</item>
		</argument>
		<settings>
			<submitUrl path="*/*/save"/>
		</settings>
		<dataProvider name="employees_form_data_source" class="Training\BasicModule\Model\Employees\DataProvider">
			<settings>
				<requestFieldName>employees_id</requestFieldName>
				<primaryFieldName>employees_id</primaryFieldName>
			</settings>
		</dataProvider>
	</dataSource>
	<fieldset name="general">
		<settings>
			<label>General</label>
		</settings>
		<field name="employeeNumber" formElement="textarea" sortOrder="10">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">employees</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">employeeNumber</label>
				<dataScope>employeeNumber</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">false</rule>
				</validation>
			</settings>
		</field>
		<field name="lastName" formElement="textarea" sortOrder="20">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">employees</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">lastName</label>
				<dataScope>lastName</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">false</rule>
				</validation>
			</settings>
		</field>
		<field name="firstName" formElement="textarea" sortOrder="30">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">employees</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">firstName</label>
				<dataScope>firstName</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">false</rule>
				</validation>
			</settings>
		</field>
	</fieldset>
</form>
